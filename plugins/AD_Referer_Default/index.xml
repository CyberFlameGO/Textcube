<?xml version="1.0" encoding="utf-8"?>
<plugin version="1.0">
  <title xml:lang="en">Referer Log</title>
  <title xml:lang="ko">리퍼러 기록</title>
  <link>http://forum.tattertools.com/ko/</link>
  <version>1.0</version>
  <description xml:lang="en">Referer log Plugin using Tattertools Components.</description>
  <description xml:lang="ko">태터툴즈 컴포넌트를 이용하여 리퍼러 기록을 보여줍니다.</description>
  <license>GPL</license>
  <author xml:lang="en" link="http://www.tattertools.com/">Tatter aNd Friends</author>
  <author xml:lang="ko" link="http://www.tattertools.com/">태터앤프렌즈</author>
  <safety changeData="no" exposeData="no" accessLocal="no" accessRemote="no" accessRaw="yes" />
  <scope>admin</scope>
  <requirements>
    <tattertools>1.1</tattertools>
  </requirements>
  <binding>
    <adminMenu>
      <viewMethods>
        <method>
          <title xml:lang="en">Referer Log</title>
          <title xml:lang="ko">리퍼러 기록</title>
          <handler>AD_Referer_Default</handler>
          <params>
            <param>
              <name>page</name>
              <type>int</type>
              <default>1</default>
            </param>
            <param>
              <name>perPage</name>
              <type>int</type>
              <mandatory>0</mandatory>
            </param>
          </params>
        </method>
      </viewMethods>
    </adminMenu>
  </binding>
</plugin>
