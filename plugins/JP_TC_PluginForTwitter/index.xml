<?xml version="1.0" encoding="utf-8"?>
<plugin version="1.0">
  <title xml:lang="en">JP Twitter plugin</title>
  <title xml:lang="ko">JP 트위터 플러그인</title>
  <description xml:lang="en"><![CDATA[Textcube plugin for Twitter.]]></description>
  <description xml:lang="ko"><![CDATA[트위터를 위한 텍스트큐브 플러그인.]]></description>
  <link>http://create74.com/</link>
  <version>1.10.0221</version>
  <license>GPL</license>
  <author xml:lang="en" link="http://create74.com"><![CDATA[Yong-ju, Park (J.Parker / Needlworks)]]></author>
  <author xml:lang="ko" link="http://create74.com"><![CDATA[박용주 (J.Parker / Needlworks)]]></author>
  <safety changeData="no" exposeData="no" accessLocal="no" accessRemote="no" accessRaw="no" />
  <requirements>
    <textcube>
      <minVersion>1.8</minVersion> 
    </textcube>
  </requirements>
  <binding>
	<center handler="CT_Twitter_updating" title="트위터 글쓰기" />
	<listener event="/plugin/shortenURLCreate/">getBitlyShortenURLCreate</listener>
	<listener event="/plugin/twitterPostUpdate/">getTwitterPostUpdate</listener>
	<listener event="/plugin/twitterDestroyStatus/">getTwitterDestroyStatus</listener>
	<listener event="/plugin/twitterUpateMorePaging/">getTwitterUpateMorePaging</listener>
	<listener event="/plugin/twitterCreateFavorites/">getCreateFavorites</listener>
	<listener event="/plugin/twitterDestroyFavorites/">getDestroyFavorites</listener>
	<listener event="/plugin/twitterRecipientsList/">getTwitterRecipientsList</listener>
	<listener event="/plugin/twitterNewMessage/">getTwitterNewMessage</listener>
	<listener event="/plugin/twitterDestroyMessage/">getTwitterDestroyMessage</listener>
	<listener event="/plugin/twitterCreateFriendship/">getTwitterCreateFriendship</listener>
	<listener event="/plugin/twitterDestroyFriendship/">getTwitterDestroyFriendship</listener>
	<listener event="/plugin/twitterSavedSearchesOpenClose/">getSavedSearchesOpenClose</listener>
	<listener event="/plugin/twitterCreateSavedSearches/">getCreateSavedSearches</listener>
	<listener event="/plugin/twitterDestroySavedSearches/">getDestroySavedSearches</listener>

	<listener event="AddPost">getUpdatingNewPostToTwitter</listener>
	<listener event="AddLine">getUpdatingNewLineToTwitter</listener>
	<listener event="AddPostByBlogAPI">getUpdatingNewPostToTwitter</listener>
	<listener event="CreatePostSyndicate">getUpdatingNewPostToTwitterSynd</listener>
	<listener event="ModifyPostSyndicate">getUpdatingNewPostToTwitterSynd</listener>
	<listener event="ShowAdminHeader" handler="getJQueryCheckLoad" />

	<listener event="Cron10m" handler="synchronizeTwitterWithLine" />

	<adminMenu>
      <viewMethods>
        <method>
          <topMenu>center</topMenu>
          <contentMenuOrder>5</contentMenuOrder>
          <title xml:lang="en">Twitter Management</title>
          <title xml:lang="ko">트위터 관리</title>
          <handler>PN_Twitter_Management</handler>
          <params>
            <param>
              <name>menu</name>
              <type>string</type>
              <mandatory></mandatory>
            </param>
            <param>
              <name>seleteTab</name>
              <type>string</type>
              <mandatory></mandatory>
            </param>
            <param>
              <name>user_id</name>
              <type>string</type>
              <mandatory></mandatory>
            </param>
            <param>
              <name>q</name>
              <type>string</type>
              <mandatory></mandatory>
            </param>
          </params>
        </method>
      </viewMethods>
    </adminMenu>
	<config dataValHandler="getTwitterDataSet">
		<window width="525" height="533" />
		<fieldset legend="트위터 계정 정보" >
			<field title=" : Username" name="username" type="text" size="15" titledirection="bk" value="" />
			<field title=" : Password" name="password" type="text" size="15" titledirection="bk" value="" />
		</fieldset>
		<fieldset legend="트위터 글 보내기" >
			<field title=" " name="twitterUpdate" type="radio" titledirection="bk">
				<op value="public_synd" checked="checked"><![CDATA[&nbsp;새 글 작성 시 <font color="blue">공개</font> 또는 <font color="blue">발행</font> 글&nbsp;&nbsp;]]></op>
				<op value="syndicate"><![CDATA[&nbsp;작성한 글 수동 <font color="blue">발행시</font>&nbsp;&nbsp;]]></op>
				<op value="none"><![CDATA[&nbsp;<font color="#8F1215">사용 안함</font>]]></op>
			</field>
			<field title=" " name="updateText" type="radio" titledirection="bk">
				<op value="title" checked="checked"><![CDATA[&nbsp;글 제목을 보냄&nbsp;&nbsp;]]></op>
				<op value="content"><![CDATA[&nbsp;글 본문을 요약해서 보냄]]></op>
			</field>
			<field title=" " name="hash" type="checkbox" titledirection="bk">
				<op value="1" name="hashTag"><![CDATA[&nbsp;해시태그 사용]]></op>
			</field>
			<field title=" : 해시태그" name="hashTags" type="text" size="25" titledirection="bk" value="#Textcube" />
		</fieldset>
		<fieldset legend="트위터 글 목록" >
			<field title=" : 글 목록 길이" name="listLength" type="text" size="5" titledirection="bk" value="10" >
				<caption><![CDATA[* 기본 목록 10개 보여줌. <br/> * 단, 'following', 'followers' 목록 제외]]></caption>
			</field>
		</fieldset>
		<fieldset legend="트위터-라인 동기화">
			<field title=" " type="checkbox" name="synchronizeLine" titledirection="bk" checked="checked">
				<op value="true" name="synchronizeLine"><![CDATA[&nbsp;트위터와 라인을 동기화합니다.]]></op>
				<caption><![CDATA[* 트위터에 적은 글이 자동으로 라인의 새 글로 등록됩니다. <br/> * 라인에 적은 글이 자동으로 트위터의 새 글로 등록됩니다.]]></caption>
			</field>
		</fieldset>
	</config>
  </binding>
</plugin>
