<?xml version="1.0" encoding="utf-8"?>
<plugin version="1.0">
  <title xml:lang="en">Banner Plug-in</title>
  <title xml:lang="ko">배너출력</title>
  <link>http://needlworks.org/</link>
  <version>1.0</version>
  <description xml:lang="en">Display banner on sidebar.</description>
  <description xml:lang="ko">사이드바에 배너를 출력해 줍니다.</description>
  <license>GPL</license>
  <author xml:lang="en" link="http://needlworks.org">Needlworks</author>
  <author xml:lang="ko" link="http://needlworks.org">Needlworks</author>
  <safety changeData="no" exposeData="no" accessLocal="no" accessRemote="no" accessRaw="yes" />
  <requirements>
    <textcube>1.1</textcube>
  </requirements>
  <binding>
    <sidebar title="ImageBanner" handler="SB_Banner_withImage">
      <params>
        <param>
          <title xml:lang="ko">이미지 경로</title>
          <title xml:lang="en">image source</title>
          <name>imgsrc</name>
          <type>string</type>
        </param>
        <param>
          <title xml:lang="ko">타겟 경로</title>
          <title xml:lang="en">target URL</title>
          <name>href</name>
          <type>string</type>
        </param>
      </params>
    </sidebar>
    <sidebar title="CodeBanner" handler="SB_Banner_withCode">
      <params>
        <param>
          <title xml:lang="ko">HTML 코드</title>
          <title xml:lang="en">HTML Code</title>
          <name>text</name>
          <type>textarea</type>
        </param>
      </params>
    </sidebar>
  </binding>
</plugin>