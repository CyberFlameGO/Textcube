<?xml version="1.0" encoding="utf-8"?>
<plugin version="1.0">
  <title xml:lang="en">Visitors</title>
  <title xml:lang="ko">방문자 기록</title>
  <title xml:lang="ja">詳細統計</title>
  <link>http://forum.tattertools.com/ko/</link>
  <version>1.0</version>
  <description xml:lang="en">Default Visitor log Plugin</description>
  <description xml:lang="ko">태터툴즈 컴포넌트를 이용하여 방문자 기록을 보여줍니다.</description>
  <description xml:lang="ja">テト・ツールズのコンポーネントを利用して、詳細な統計情報を見せます。</description>
  <license>GPL</license>
  <author xml:lang="en" link="http://forum.tattertools.com/en">Tatter &amp; Friends</author>
  <author xml:lang="ko" link="http://forum.tattertools.com/ko">태터앤프렌즈</author>
  <author xml:lang="ja" link="http://www.tattertools.com/">Tatter &amp; Friends</author>
  <safety changeData="no" exposeData="no" accessLocal="no" accessRemote="no" accessRaw="yes" />
  <requirements>
    <tattertools>1.1</tattertools>
  </requirements>
  <binding>
    <adminMenu>
      <viewMethods>
        <method>
          <title xml:lang="en">Visitors</title>
          <title xml:lang="ko">방문자 기록</title>
          <title xml:lang="ja">詳細統計</title>
          <handler>AD_Visitor_Default</handler>
          <params>
            <param>
              <name>date</name>
              <type>int</type>
              <mandatory>0</mandatory>
            </param>
          </params>
        </method>
      </viewMethods>
      <methods>
        <method>
          <handler>AD_Visitor_Default_set</handler>
          <params>
            <param>
              <name>ajaxcall</name>
              <type>string</type>
              <mandatory>0</mandatory>
            </param>
          </params>
        </method>
      </methods>
    </adminMenu>
  </binding>
</plugin>
